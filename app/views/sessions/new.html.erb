<h1>Log In</h1>

<%= form_with url: session_path do |f| %>
  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Log In', class: 'btn btn-primary' %>
  </div>
<% end %>
