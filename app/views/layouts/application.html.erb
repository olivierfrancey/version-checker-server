<!DOCTYPE html>
<html>
  <head>
    <title>BarcodeProject30Server</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="container">
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <ul class="nav navbar-nav">
            <li><%= image_tag "logo.svg", style: 'padding:10px 15px 10px 0' %> </li>
            <li><a class="navbar-brand" href="#">version checker</a></li>
          </ul>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to 'Projects', groups_path %></li>
            <li><%= link_to 'Docs', docs_path %></li>
            <li><%= link_to 'Users', users_path %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if logged_in? %>
              <li><%= link_to current_user.first_name, edit_user_path(:id => current_user.id) %></li>
              <li><%= link_to 'Logout', session_path, method: :delete, style: 'margin-right: 15px' %></li>
            <% else %>
              <li><%= link_to 'Sign Up', new_user_path %></li>
              <li><%= link_to 'Log In', new_session_path, style: 'margin-right: 15px' %></li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav>
    <% flash.each do |key, value| %>
      <%= content_tag :div, value, class: "flash #{key}" %>
    <% end %>
    <%= yield %>
  </body>
</html>
